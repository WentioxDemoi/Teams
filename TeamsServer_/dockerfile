FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    pkg-config \
    libssl-dev \
    python3 \
    git \
    wget \
    tar \
    bzip2 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

RUN wget https://sourceforge.net/projects/boost/files/boost/1.89.0/boost_1_89_0.tar.bz2/download \
    -O boost_1_89_0.tar.bz2 && \
    tar --bzip2 -xf boost_1_89_0.tar.bz2 && \
    cd boost_1_89_0 && \
    ./bootstrap.sh --prefix=/usr/local/boost_1_89_0 && \
    ./b2 install threading=multi link=shared runtime-link=shared  && \
    cd .. && rm -rf boost_1_89_0 boost_1_89_0.tar.bz2
  
COPY . .

RUN mkdir build && cd build && \
    cmake .. && \
    cmake --build .

EXPOSE 12345

CMD ["./build/server"]
# CMD ["/bin/bash"]