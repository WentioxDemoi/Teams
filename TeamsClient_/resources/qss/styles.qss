
QWidget {
    background-color: #0f172a;
    color: #e5e7eb;
    font-family: "Segoe UI";
    font-size: 14px;
}

QLineEdit {
    background: #020617;
    border: 1px solid #334155;
    border-radius: 8px;
    padding: 10px;
}

QLineEdit:focus {
    border: 1px solid #38bdf8;
}

QPushButton {
    background: #38bdf8;
    color: #020617;
    border-radius: 8px;
    padding: 10px;
    font-weight: bold;
}

QPushButton:hover {
    background: #0ea5e9;
}
